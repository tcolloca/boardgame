{
  "name": "boardgame",
  "version": "1.0.0",
  "description": "A boardgame",
  "main": "main.js",
  "dependencies": {
    "@momothepug/tsmodule-alias": "^1.0.0",
    "@types/random": "^2.1.0",
    "module-alias": "^2.2.1",
    "random": "^2.1.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.2",
    "@types/expect": "^1.20.4",
    "@types/mocha": "^5.2.7",
    "@types/node": "^10.0.3",
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "chai": "^4.2.0",
    "eslint": "^6.4.0",
    "eslint-config-google": "^0.14.0",
    "mocha": "^6.2.0",
    "pre-commit": "^1.2.2",
    "prettier-eslint": "^9.0.0",
    "ts-mocha": "^6.0.0",
    "ts-node": "^8.3.0",
    "typescript": "~3.5.0"
  },
  "scripts": {
    "ts-node": "ts-node",
    "compile": "tsc -p .",
    "run": "npm run compile && node build/main.js",
    "ts-mocha": "ts-mocha",
    "testall": "ts-mocha src/test/**/*_test.ts",
    "prettier": "prettier --config dev/config/.prettierrc.json",
    "eslint": "eslint --config dev/config/.eslintrc.json",
    "lintall": "npm run prettier -- --check src/ts/**/* && npm run eslint -- src/ts/**/*",
    "lintfixall": "npm run prettier -- --write src/ts/**/* && npm run eslint -- --fix src/ts/**/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tcolloca/boardgame.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tcolloca/boardgame/issues"
  },
  "homepage": "https://github.com/tcolloca/boardgame#readme",
  "pre-commit": [
    "lintall",
    "testall"
  ],
  "_moduleAliases": {
    "@root": "src/ts",
    "@test": "src/test/ts"
  }
}
