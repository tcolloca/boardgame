{
  "compilerOptions": {
    "rootDir": "src",
    "module": "commonjs",
    "target": "es6",
    "outDir": "build",
    "allowJs": true,
    "baseUrl": "src",
    "paths": {
      "@root/*": [
        "*"
      ],
      "@genfiles/*": [
        "genfiles/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/genfiles/**/*.d.ts",
    "src/genfiles/**/*.js"
  ],
  "exclude": [
    "src/test/**/*_test.ts"
  ]
}
